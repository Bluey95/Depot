<p id="notice"><%= notice %></p>
<h6 style = "float:right"><%= @shown_message %></h6>
<h1>Book For A Service</h1>  
<cache @products do %>
<% @products.each do |product| %>
	<cache product do>
	<div class="entry col-md-4">
		<%= link_to image_tag(product.image_url, :style=>'width:90%; height: 200px'), line_items_path(:product_id => product), :method => :post, :remote => true %>
		<h3 style="margin-top: 210px"><%= product.title %></h3>
		<div class="price_line col-md-4" style="margin-top: 10px">
			<span class="price"><%= number_to_currency(product.price) %></span>
			<%= button_to 'Order',
			line_items_path(product_id: product, locale: I18n.locale),
			remote: true %>
			<%= button_to 'Schedule', new_schedule_path, method: :get %>
		</div>
	</div>
<% end %>
	


 

