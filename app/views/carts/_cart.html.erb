<% unless cart.line_items.empty? %>
<% unless cart.line_item_products.empty? %>
<h2><%= t('.title') %></h2>
<style>
	 table{
	 border-top: 1px dotted #141;
	 border-bottom: 1px dotted #141;
	 margin-bottom: 10px;
	 }

	 .total_line{
	 border-top: 1px solid #141;
	 text-align: right;
	 }

	 .total_cell{
	 font-weight: bold}
	 }
</style>
<table>
	<%= render(@cart.line_items)%>
	<%= render(@cart.line_item_products)%>
	 <tr class="total_line">
	 <td colspan="2">Total</td>
	 <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	 </tr>
 </table>

<%= button_to t('.checkout'), new_order_path, method: :get, :action => :checkout if @order.nil? %>
<%= button_to t('.empty'), @cart, method: :delete, remote: true,
data: { confirm: 'Are you sure?' } %>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>

<% end  %>
<% end %>

