<% if line_item_product == @current_item %>
 <tr id="current_item">
 <% else %>
 <tr>
 <% end %>
<td><%= line_item_product.quantity %>&times;</td>
<td><%= line_item_product.productsonsale.try(:title) %></td>
<td class="item_price"><%= number_to_currency(line_item_product.total_price) %></td>
<td><%= button_to "-", reduce_line_item_product_path(line_item_product), :method => :put, remote: true %></td>
<td><%= button_to "+", add_line_item_product_path(line_item_product), :method => :put, remote: true %></td>
</tr>
