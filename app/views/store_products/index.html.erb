<p id="notice"><%= notice %></p>
<h1>Your Pragmatic Catalog</h1>
<% cache @productsonsales do %>
<% @productsonsales.each do |productsonsale| %>
<% cache productsonsale do %>
<div class="entry">
<%= image_tag(productsonsale.image_url) %>
<h3><%= productsonsale.title %></h3>
<%= sanitize(productsonsale.description) %>
<div class="price_line">
<span class="price"><%= number_to_currency(productsonsale.price) %></span>
<%= button_to 'Add to Cart', line_item_products_path(productsonsale_id: productsonsale), remote: true %>
</div>
</div>
<% end %>
<% end %>
<% end %>
