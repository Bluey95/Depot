<%= form_for(schedule) do |f| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :start %>
    <%= f.datetime_select :start %>
  </div>

  <div class="field">
    <%= f.label :stop %>
    <%= f.datetime_select :stop %>
  </div>

  <div class="field">
    <p>Enter the id number of your favorite beautician: </p>
    <%= f.label :beautician_id %>
    <%= f.number_field :beautician_id %>
    <%= link_to 'view Beauticians', beauticians_path %>
  </div>

  <div class="field">
    <%= f.label :account_id %>
    <%= f.number_field :account_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
